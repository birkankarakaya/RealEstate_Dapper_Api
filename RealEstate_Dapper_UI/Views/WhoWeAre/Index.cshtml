@model List<ResultWhoWeAreDetailDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<h1>Index</h1>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Biz Kimiz Tanım Listesi</h6>
                <td><a href="/WhoWeAre/CreateWhoWeAreDetail" class="btn btn-outline-info">Yeni Biz Kimiz</a></td>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Alt Başlık</th>
                                <th scope="col">Açıklama 1</th>
                                <th scope="col">Açıklama 2</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.title</td>
                                    <td>@item.subTitle</td>
                                    <td>@item.description1</td>
                                    <td>@item.description2</td>
                                    <td><a href="/WhoWeAre/UpdateWhoWeAreDetail/@item.id" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/WhoWeAre/DeleteWhoWeAreDetail/@item.id" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>