@model CreateEmployeeDto
@{
    ViewData["Title"] = "CreateEmployee";
    Layout = "~/Views/Admin/Index.cshtml";
}

<br />
<br />
<h1>Yeni Danışman Ekle</h1>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <form method="post">
                    <label>Danışan Adı</label>
                    <input type="text" asp-for="name" class="form-control" />
                    <br />
                    <label>Unvanı</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <label>Mail</label>
                    <input type="email" asp-for="mail" class="form-control" />
                    <br />
                    <label>Telefon Numarası</label>
                    <input type="tel" asp-for="phone" class="form-control" />
                    <br />
                    <label>Fotoğraf</label>
                    <input type="text" asp-for="imageUrl" class="form-control" />
                    <br />
                    <button class="btn btn-primary">KAYDET</button>
                </form>
            </div>
        </div>
    </div>
</div>