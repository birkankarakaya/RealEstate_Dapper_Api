@model List<ResultBottomGridDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Veri Listesi</h6>
                <td><a href="/BottomGrid/CreateBottomGrid" class="btn btn-outline-info">Yeni Veri</a></td>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Icon</th>
                                <th scope="col">Ad</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.ID</th>
                                    <td>@item.Icon</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.Status</td>
                                    <td><a href="/BottomGrid/UpdateBottomGrid/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/BottomGrid/DeleteBottomGrid/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>