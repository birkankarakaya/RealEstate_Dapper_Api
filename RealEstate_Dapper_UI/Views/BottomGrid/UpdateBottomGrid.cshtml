@model UpdateBottomGridDto
@{
    ViewData["Title"] = "UpdateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<br />
<br />
<h1>Yeni Veri Ekle</h1>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <form method="post">
                    <input type="hidden" asp-for="ID" />
                    <label>Veri Icon</label>
                    <input type="text" asp-for="Icon" class="form-control" />
                    <br />
                    <label>Veri Adı</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Veri Açıklama</label>
                    <textarea type="text" asp-for="Description" rows="5" class="form-control"></textarea>
                    <br />
                    <button class="btn btn-primary">GÜNCELLE</button>
                </form>
            </div>
        </div>
    </div>
</div>